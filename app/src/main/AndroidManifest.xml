<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lyn.callibrpump">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="lyn.librpump.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="lyn.librpump.activity.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="lyn.librpump.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lyn.librpump.activity.MainActivity" />
        </activity>
        <activity
            android:name="lyn.librpump.activity.CreatePumpActivity"
            android:parentActivityName="lyn.librpump.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lyn.librpump.activity.MainActivity" />
        </activity>
        <activity android:name="lyn.librpump.activity.PumpDetailActivity" />
        <activity
            android:name="lyn.librpump.activity.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
    </application>

</manifest>
